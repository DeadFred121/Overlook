<%= form_with(model: @room, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :price_per_night %>
    <%= form.text_field :price_per_night %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
